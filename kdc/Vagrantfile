require_relative "../lib/hosts_trigger"

Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu2204"
  config.vm.hostname = "samba-ad-dc"
  config.vm.network "public_network"

  config.vm.provider "hyperv" do |hv|
    hv.vmname = "samba-ad-dc"
    hv.memory = 1024
    hv.maxmemory = 1024
    hv.enable_virtualization_extensions = true
  end

  # Upload dashboard files, then run provisioning
  config.vm.provision "file", source: "../lib/dashboard-common.sh", destination: "/tmp/dashboard-common.sh", run: "always"
  config.vm.provision "file", source: "dashboard-kdc.sh", destination: "/tmp/dashboard-vm.sh", run: "always"
  config.vm.provision "shell", path: "provision.sh", run: "always"

  # --- VAGRANT NATIVE STATE PASSING ---
  # Write the IP to a hidden file in the project root
  config.trigger.after :up do |trigger|
    trigger.ruby do |env,machine|
      ip = machine.ssh_info[:host]
      File.write('../.kdc_ip', ip)
      puts "KDC IP [#{ip}] saved to .kdc_ip"
    end
  end

  # Update/clean Windows hosts file for name-based access from the host
  HostsTrigger.register(config, "samba-ad-dc.corp.internal samba-ad-dc")
end
