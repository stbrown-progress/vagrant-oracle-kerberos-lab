require_relative "../lib/hosts_trigger"

Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu2204"
  config.vm.hostname = "oracle"
  config.vm.network "public_network"

  config.vm.provider "hyperv" do |hv|
    hv.vmname = "oracle-db"
    hv.memory = 4096
    hv.maxmemory = 4096
    hv.cpus = 2
    hv.enable_virtualization_extensions = true
  end

  # Read KDC IP
  kdc_ip = "127.0.0.1"
  if File.exist?('../.kdc_ip')
    kdc_ip = File.read('../.kdc_ip').strip
  end

  # Upload shared helpers, sub-scripts, config files, and dashboard
  config.vm.provision "file", source: "../lib/fetch_with_retry.sh", destination: "/tmp/fetch_with_retry.sh", run: "always"
  config.vm.provision "file", source: "setup-dns-registration.sh", destination: "/tmp/setup-dns-registration.sh", run: "always"
  config.vm.provision "file", source: "setup-docker.sh", destination: "/tmp/setup-docker.sh", run: "always"
  config.vm.provision "file", source: "setup-oracle-db.sh", destination: "/tmp/setup-oracle-db.sh", run: "always"
  config.vm.provision "file", source: "sqlnet.ora", destination: "/tmp/scripts/sqlnet.ora", run: "always"
  config.vm.provision "file", source: "create_users.sql", destination: "/tmp/scripts/create_users.sql", run: "always"
  config.vm.provision "file", source: "check_cdb.sql", destination: "/tmp/scripts/check_cdb.sql", run: "always"
  config.vm.provision "file", source: "check_pdb.sql", destination: "/tmp/scripts/check_pdb.sql", run: "always"
  config.vm.provision "file", source: "../lib/setup-dashboard.sh", destination: "/tmp/setup-dashboard.sh", run: "always"
  config.vm.provision "file", source: "../lib/dashboard-common.sh", destination: "/tmp/dashboard-common.sh", run: "always"
  config.vm.provision "file", source: "dashboard-oracle.sh", destination: "/tmp/dashboard-vm.sh", run: "always"
  config.vm.provision "shell", path: "provision.sh", args: [kdc_ip], run: "always"

  # Update/clean Windows hosts file for name-based access from the host
  HostsTrigger.register(config, "oracle.corp.internal oracle")
end
